{
  "name": "moodle-notifier",
  "author": {
    "name": "Ariel Volovik",
    "email": "volovikariel@gmail.com",
    "url": "https://github.com/volovikariel"
  },
  "email": "volovikariel@gmail.com",
  "version": "0.1.6",
  "description": "Utility app which provides notifications for a moodle account.",
  "main": "./src/script.js",
  "dependencies": {
    "auto-launch": "^5.0.5",
    "dotenv": "^8.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "node-fetch": "^2.6.1",
    "node-notifier": "^8.0.1",
    "puppeteer": "^5.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^11.1.1"
  },
  "scripts": {
    "default": "npm install && electron ./src/script.js",
    "dev": "npm install && electron ./src/script.js --dev",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make-linux": "electron-forge make --platform=linux --target=deb",
    "make-window": "electron-forge make --platform=win32 --target=squirrel"
  },
  "config": {
    "forge": {
      "name": "moodle-notifier-forge",
      "packagerConfig": {
        "build": {
          "appId": "fun.electron.moodlenotifier",
          "productName": "moodle-notifier",
          "files": [
            "./src/util/**"
          ],
          "extraFiles": [
            {
              "from": "src",
              "to": "src"
            },
            {
              "from": "Frontend",
              "to": "Frontend"
            },
            {
              "from": "package.json",
              "to": "package.json",
              "filter": "**/*"
            },
            {
              "from": "src/util",
              "to": "src/util",
              "filter": "**/*"
            }
          ],
          "directories": {
            "output": "release",
            "buildResources": "dist"
          },
          "dmg": {
            "contents": [
              {
                "x": 130,
                "y": 220
              },
              {
                "x": 410,
                "y": 220,
                "type": "link",
                "path": "/Applications"
              }
            ]
          },
          "win": {
            "target": [
              "nsis",
              "msi"
            ]
          },
          "linux": {
            "target": [
              "deb",
              "rpm",
              "snap",
              "AppImage"
            ],
            "category": "Development"
          },
          "mac": {
            "category": "public.app-category.utilities"
          }
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "moodle-notifier"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "maintainer": "Ariel Volovik"
          }
        }
      ]
    }
  }
}
